---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: dirtviz-ingress
  namespace: dirtviz
  label:
    git-branch: {{ env['GITHUB_REF_NAME'] }}
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /dirtviz/$2
spec:
  ingressClassName: nginx
  rules:
  - http:
      paths:
        - path: /foo(/|$)(.*)
          pathType: Prefix
          backend:
            service:
              name: portal
              port:
                number: 5006
