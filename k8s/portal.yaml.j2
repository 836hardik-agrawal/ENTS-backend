---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: dirtviz
  name: portal
  labels:
    git-branch: {{ env['GITHUB_REF_NAME'] }}
spec:
  selector:
    matchLabels:
      app: portal
      git-branch: {{ env['GITHUB_REF_NAME'] }}
  template:
    metadata:
      labels:
        app: portal
        git-branch: {{ env['GITHUB_REF_NAME'] }}
        git-commit: {{ env['GITHUB_SHA'] }}
    spec:
      containers:
        - name: portal
          image: ghcr.io/jlab-sensing/dirtviz-portal:{{ env['GITHUB_REF_NAME'] }}
          imagePullPolicy: Always
          ports:
            - containerPort: 5006
          envFrom:
            - secretRef:
                name: dburl
          env:
            - name: BOKEH_ALLOW_WS_ORIGIN
              value: "0.0.0.0"
            - name: DB_DATABASE
              value: dirtviz_{{ env['GITHUB_REF_NAME'] }}
---
apiVersion: v1
kind: Service
metadata:
  namespace: dirtviz
  name: portal
  labels:
    git-branch: {{ env['GITHUB_REF_NAME'] }}
spec:
  selector:
    app: portal
    git-branch: {{ env['GITHUB_REF_NAME'] }}
  ports:
    - port: 5006
  type: NodePort
