---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: dirtviz
  name: cs-http
  labels:
    git-branch: {{ env['GITHUB_REF_NAME'] }}
spec:
  selector:
    matchLabels:
      app: cs-http
      git-branch: {{ env['GITHUB_REF_NAME'] }}
  template:
    metadata:
      labels:
        app: cs-http
        git-branch: {{ env['GITHUB_REF_NAME'] }}
        git-commit: {{ env['GITHUB_SHA'] }}
    spec:
      containers:
        - name: portal
          image: ghcr.io/jlab-sensing/dirtviz-cs-http:{{ env['GITHUB_REF_NAME'] }}
          imagePullPolicy: Always
          ports:
            - containerPort: 8100
          envFrom:
            - secretRef:
                name: dburl
          env:
            - name: DB_DATABASE
              value: dirtviz_{{ env['GITHUB_REF_NAME'] }}
---
apiVersion: v1
kind: Service
metadata:
  namespace: dirtviz
  name: cs-http
  labels:
    git-branch: {{ env['GITHUB_REF_NAME'] }}
spec:
  selector:
    app: cs-http
    git-branch: {{ env['GITHUB_REF_NAME'] }}
  ports:
    - port: 8100
